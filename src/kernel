__kernel void pso(__constant const float *paramsf, 
				  __constant const uint *paramsi,
				  __global const float *data, 
				  __constant const float *particle, 
				  __global float *out, 
				  __local float *tmp)
{
	// params float
	const float targetValue = paramsf[0];
	const float targetSigma = paramsf[1];
	const float minSigma = paramsf[2];
	
	// params uint
	const uint targetAhead = paramsi[0];
	const uint lastItem = paramsi[1];
	const uint localWindow = paramsi[2];
	
	// ids
	uint gid = get_global_id(0);
	uint lid = get_local_id(0);
	
	// correct ids
	if (gid > lastItem)
	{
		gid = get_group_id(0) * get_local_size(0);
		lid = 0;
	}
	
	// fill local memory
	
	
	
	
	out[gid] = gid;
	printf("gid=%u, lid=%u, grp=%u\n", gid, lid, get_group_id(0));
}